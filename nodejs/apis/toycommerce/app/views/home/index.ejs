<html ng-app="cdcApp">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <title>ToyShop em NodeJS</title>
    
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="container">

<section class="container middle">
    <div class="jumbotron">
        <h3>ToyCommerce</h3>
    </div>
    <div class="clearfix">
        <h3>Últimos lançamentos</h3>
        <ul>
            <% for(i = 0; i < 3; i++) { %>
            <li>
                <a href="#" class="block clearfix">
                    <img class="img-rounded" width="170" height="200" src="img/livro-capa.jpg" alt="<%=livros[i].titulo%>" title="<%=livros[i].titulo%>"/>

                    <span class="clearfix titulo-livro"><%=livros[i].titulo%></span>
                    <small class="btn btn-warning">Lan&#231;amento!</small>
                </a>
            </li>
            <% } %>
        </ul>
    </div>
    <div class="clearfix">
        <h3>Todos o catálogo</h3>
        <ul>
            <% for(i = 0; i < livros.length; i++) { %>
                <li>
                    <a href="#" class="block clearfix">
                        <span class="clearfix titulo-livro"><%=livros[i].titulo%></span>
                        <img class="img-rounded" width="143" height="202" src="img/livro-capa.jpg" alt="<%=livros[i].titulo%>" title="<%=livros[i].titulo%>"/>
                        <small class="btn btn-success">Compre</small>
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</section>
</body>
<script src="socket.io/socket.io.js"></script>
<script>
    var socket = io();
    socket.on('novaPromocao', function (data) {
        alert("Nova promoção top com o item: " + data.livro.id);
    });
</script>
</html>
