<% if(errosValidacao) { %>
<div class="errors">
	<ul>
		<% for(var i = 0; i < errosValidacao.length; i++) {%>
			<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
		<% } %>
	</ul>
</div>
<% } %>
<form method="post" action="/produtos">
	<div>
		<label for="titulo">Título:</label>
		<input type="text" name="titulo" value="<%=produto.titulo%>" />
	</div>
	<div>
		<label for="isbn">ISBN:</label>
		<input type="text" name="isbn" value="<%=produto.isbn%>" />
	</div>
	<div>
		<label for="preco">Preço:</label>
		<input type="text" id="preco" value="<%produto.preco%>" />
	</div>
	<div>
		<input type="submit" value="Salvar" />
	</div>
</form>